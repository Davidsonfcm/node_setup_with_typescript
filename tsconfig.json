{
  "compilerOptions": {                
    "target": "ES2019",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                                            
    "outDir": "./dist",                        
    "rootDir": "./src",                                            
    "typeRoots": [
      "./node_modules/@types",
      ".src/@types"
    ],                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@views/*": ["./src/views/*"],
      "@models/*": ["./src/models/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
